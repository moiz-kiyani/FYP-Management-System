
@{
    ViewData["Title"] = "Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row gutters-sm">
    <div class="container" style="margin-top:30px; margin-left:40px;">

    <div class="col-md-6 mt-3 ">
        <div class="card mb-3 ">
            <div class="card-body">
                <h1 class="display-3" style="color:#858796"><b>Profile</b></h1>
                <hr>
                <div class="row">
                    <div class="col-sm-3">
                        <h6 class="mb-0">Full Name</h6>
                    </div>
                    <div class="col-sm-9 text-secondary">
                        @ViewBag.user.StudentName
                    </div>
                </div>
                <hr>
                <div class="row">
                    <div class="col-sm-3">
                        <h6 class="mb-0">Email</h6>
                    </div>
                    <div class="col-sm-9 text-secondary">
                        @ViewBag.user.AppUsers.Email
                    </div>
                </div>
                <hr>
                <div class="row">
                    <div class="col-sm-3">
                        <h6 class="mb-0">Roll Number</h6>
                    </div>
                    <div class="col-sm-9 text-secondary">
                        @ViewBag.user.RollNo
                    </div>
                </div>
                <hr>
                <div class="row">
                    <div class="col-sm-3">
                        <h6 class="mb-0">Semester</h6>
                    </div>
                    <div class="col-sm-9 text-secondary">
                        @ViewBag.user.Semester
                    </div>
                </div>
                @*<hr>
                <div class="row">
                    <div class="col-sm-3">
                        <h6 class="mb-0">Section</h6>
                    </div>
                    <div class="col-sm-9 text-secondary">
                        @ViewBag.user.Section
                    </div>
                </div>*@
                <hr>
                <div class="row">
                    <div class="col-sm-3">
                        <h6 class="mb-2">Contact No</h6>
                    </div>
                    <div class="col-sm-9 text-secondary">
                        @ViewBag.user.ContactNo
                    </div>
                </div>


            </div>
        </div>





    </div>
</div>

