@model FYPSystem.Models.Evaluation

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_LayoutSupervior.cshtml";
}

<div class="card">
    <div class="card-body">

        <h1 class="display-3" style="color:forestgreen"><b>Edit</b></h1>

        <div class="row">
            <div class="col-md-4">
                <form asp-action="Edit">
